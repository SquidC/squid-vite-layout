{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "target": "es2019",
    "lib": [
      "ESNext", "DOM"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "dist",
    "node_modules",
  ],
  "include": [ 
    "plugin"
  ]
}
 